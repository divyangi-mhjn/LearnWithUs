<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.learnwithus.FeedbackActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/colorPrimary"

        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="4dp"
            android:contentInsetLeft="3dp">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Your Opinion Matters"
        android:gravity="center"
        android:textSize="40dp"
        android:id="@+id/head"
        android:background="#00bcd4"
        android:textColor="#ffffff"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:layout_below="@+id/head"
        android:id="@+id/hw"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#080808"
        />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
       android:foregroundTint="#00bcd4"
        android:layout_below="@+id/hw"
        android:progressTint="#00bcd4"
       android:secondaryProgressTint="#00bcd4"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:text="Kindly tell us how was your experience"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textColor="#00bcd4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/img"
        android:id="@+id/hw1"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#080808"
        />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/submit_edit"
        android:textColor="#ffffff"
        android:layout_below="@+id/edit"
        android:elevation="2dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/hw1"
        android:id="@+id/edit"
        android:background="@drawable/edit_style"
        android:gravity="center"
        android:hint="Any Suggestions"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
